{% extends 'base.html.twig' %}

{% block body %}
    <h3>Modifier la marque</h3>

    {{ form_start(edit_form) }}

        <div class="form-group">
            {{ form_label(edit_form.nom, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(edit_form.nom) }}
            <div class="col-sm-4">
                {{ form_widget(edit_form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <input class="btn btn-primary" type="submit" value="Edit" />
    {{ form_end(edit_form) }}




    {{ form_start(delete_form, {'attr': {'class': 'form-horizontal'}}) }}
        <input class="btn btn-danger" type="submit" value="Delete">
        <a href="{{ path('admin_marque_index') }}" class="btn btn-default pull-right"> Retour</a>
    {{ form_end(delete_form) }}

{% endblock %}
