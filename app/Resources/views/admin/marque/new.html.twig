{% extends 'base.html.twig' %}

{% block body %}
    <h3>Ajouter une marque</h3>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">
            {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
            {{ form_errors(form.nom) }}
            <div class="col-sm-4">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <input class="btn btn-primary col-sm-offset-1" type="submit" value="Ajouter" />
    {{ form_end(form) }}

    <a href="{{ path('admin_marque_index') }}" class="btn btn-default pull-right"> Retour</a>
{% endblock %}
