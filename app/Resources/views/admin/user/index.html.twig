{% extends 'base.html.twig' %}

{% block body %}

    <h3><span>Espace d'administration</span></h3>

    <div class="panel panel-primary">
        <div class="panel-heading">Recherche avanc√©e</div>
        <div class="panel-body">
            <form>
                <div class="form-group col-sm-6">
                    <label  for="username">Email address:</label>
                    <input type="text" class="form-control" id="username">
                </div>
                <div class="form-group col-sm-6">
                    <label for="email">Email address:</label>
                    <input type="email" class="form-control" id="email">
                </div>
                <div class="form-group col-sm-6">
                    <label for="statut">Statut:</label>
                    <input type="password" class="form-control" id="statut">
                </div>

                <div class="form-group col-sm-6">
                    <label for="adresse">Adresse</label>
                    <input type="text" class="form-control" id="adresse">
                </div>
                <div class="form-group col-sm-6">
                    <label for="telephone">Telephone:</label>
                    <input type="phone" class="form-control" id="telephone">
                </div>
                <div class="form-group col-sm-6">
                    <label for="ville">Ville:</label>
                    <input type="text" class="form-control" id="ville">
                </div>

                <button type="submit" class="btn btn-default">Rechercher</button>
            </form>
        </div>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Email</th>
            <th>Statut</th>
            <th>Adresse</th>
            <th>Telephone</th>
            <th>Ville</th>
            <th>Code Postal</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td></td>
                <td>{{  user.username }}</td>
                <td>{{ user.email }}</td>
                <td> {{ user.isActive ? "Oui" : "Non" }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.zipcode }}</td>
                <td>
                    <a href="" class="btn btn-sm btn-warning"><span class="glyphicon glyphicon-edit" aria-hidden="true"> Edit</span></a>
                    <a href="{{ path('app.admin.user.delete', { id: user.id }) }}" class="btn btn-sm btn-danger btn-supp"><span class="glyphicon glyphicon-trash" aria-hidden="true"> Delete</span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



    <div class="pagerfanta">
        {{ pagerfanta(my_pager,  'twitter_bootstrap3') }}
    </div>

    {% block javascript %}
        <script src="{{ asset('js/confirm-delete.js') }}"></script>
    {% endblock %}

{% endblock %}

{% block stylesheets %}
<style> </style>
{% endblock %}

