{% extends 'base.html.twig' %}

{% block body %}
    <h3>Liste des voitures</h3>

    <div>
        <a href="{{ path('voiture_new') }}" class="btn btn-primary pull-right">Nouvelle Voiture</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td><a href="{{ path('voiture_show', { 'id': voiture.id }) }}">{{ voiture.id }}</a></td>
                <td>{{ voiture.name }}</td>
                <td><img src="{{ asset('img/voiture/' ~ voiture.image ~ '') }}" style="height:50px;width:50px;" alt="{{voiture.name}}"></td>
                <td>
                    <a href="{{ path('voiture_show', { 'id': voiture.id }) }}" class="btn btn-sm btn-info"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"> Voir</span></a>
                    <a href="{{ path('voiture_edit', { 'id': voiture.id }) }}" class="btn btn-sm btn-warning"><span class="glyphicon glyphicon-edit" aria-hidden="true"> Edit</span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>





{% endblock %}
