{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ajouter une voiture</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}


        <div class="form-group">
            {{ form_label(form.name, "Nom de la voiture", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.name) }}
            <div class="col-sm-10">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.image, "Image", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.image) }}
            <div class="col-sm-10">
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.marque, "Marque", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.marque) }}
            <div class="col-sm-10">
                {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>


        <div class="form-group ">
            <button type="submit" class="btn btn-primary col-sm-offset-1">Cr√©er</button>
        </div>
    {{ form_end(form) }}


    <a href="{{ path('admin_marque_index') }}" class="btn btn-default pull-right"> Retour</a>
{% endblock %}
