{% extends 'base.html.twig' %}

{% block body %}
        <h3>Liste des pièces détachées</h3>
        <div class="row text-center">
            {% for pieceDetachee in piecesDetachees %}
            <div class="col-sm-4">
                <div class="thumbnail">
                    <img src="{{ asset('img/piece-detache/' ~ pieceDetachee.image ~ '') }}" >

                    <p class="card-text">{{ pieceDetachee.prix }}</p>
                    <a href="{{ path('app.panier.add', { id: pieceDetachee.id }) }}"  class="btn btn-primary"> Ajouter</a>

                </div>
            </div>
            {% endfor %}
        </div>
{% endblock %}
